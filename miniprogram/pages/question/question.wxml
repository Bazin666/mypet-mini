<form catchsubmit="formSubmit" catchreset="change">
    <view class="page-section">
        <view class="page-section-title">问题标题：</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd" style="margin: 30rpx 0">
                    <input class="weui-input" name="question_title" placeholder="请输入标题" value="{{q_title}}" />
                </view>
            </view>
        </view>
    </view>
    <view class="page-section">
        <view class="page-section-title">问题内容：</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd" style="margin: 30rpx 0">
                    <input class="weui-input" name="question_context" placeholder="请输入问题" type="text" value="{{q_context}}" />
                </view>
            </view>
        </view>
    </view>
    <view class="clear">
        <view class="btn-area" style="paddin">
            <button style="margin:20rpx;float:left;width: 40%;" type="primary" formType="submit">
                Submit
            </button>
            <button style="margin:20rpx;float:right;width: 40%;" formType="reset">reset</button>
        </view>
    </view>

</form>